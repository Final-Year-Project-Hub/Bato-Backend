generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String                @id @default(uuid())
  name          String?
  email         String                @unique
  emailVerified Boolean               @default(false)
  password      String?
  googleId      String?               @unique
  image         String?
  role          Role                  @default(USER)
  isActive      Boolean               @default(true)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  refreshToken  String?
  chatSessions  ChatSession[]
  roadmaps      Roadmap[]
  knownTech     UserKnownTechnology[]
  preferences   UserPreferences?
  otps          Otp[]
  document        Document[]
  quizAttempts    QuizAttempt[]
  documentSources DocumentSource[]

  @@index([role])
  @@index([email])
}

model Roadmap {
  id            String           @id @default(uuid())
  userId        String
  chatSessionId String?
  title         String
  goal          String
  intent        String           @default("learn")
  proficiency   String?
  roadmapData   Json
  message       String?
  isSelected    Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  messages      Message[]
  chatSession   ChatSession?     @relation(fields: [chatSessionId], references: [id])
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  progress      RoadmapProgress?
  topicContents TopicContent[]

  @@index([userId])
  @@index([userId, isSelected])
  @@index([chatSessionId])
  @@index([createdAt])
}

model ChatSession {
  id        String    @id @default(uuid())
  userId    String
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  roadmaps  Roadmap[]

  @@index([userId])
  @@index([userId, createdAt])
}

model Message {
  id            String      @id @default(uuid())
  chatSessionId String
  role          String
  content       String
  roadmapId     String?
  createdAt     DateTime    @default(now())
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  roadmap       Roadmap?    @relation(fields: [roadmapId], references: [id])

  @@index([chatSessionId])
  @@index([chatSessionId, createdAt])
}

model RoadmapProgress {
  id              String   @id @default(uuid())
  roadmapId       String   @unique
  completedPhaseIds Json     @default("[]")  // string[]
  completedTopicIds Json     @default("[]")  // string[]
  completedQuizPhaseIds Json @default("[]") 
  currentPhaseId   String?
  currentTopicId   String?
  totalTimeSpent  Float    @default(0)
  lastAccessedAt  DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  roadmap         Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@index([roadmapId])
}

model TopicContent {
  id          String   @id @default(uuid())
  roadmapId   String
  phaseId   String
  topicId   String

  
  // Topic identification
  topicTitle  String
  phaseNumber Int
  phaseTitle  String
  
  // Generated content (stored as JSON)
  content     Json
  
  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  roadmap      Roadmap       @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  quizAttempts QuizAttempt[]
  quizzes      Quiz[]
  
  // Ensure one topic content per roadmap/phase/topic combination
  @@unique([roadmapId, phaseId, topicId], name: "roadmapId_phaseId_topicId")
  @@index([roadmapId])
  @@index([roadmapId, phaseId])
}


model UserPreferences {
  userId             String   @id
  defaultProficiency String   @default("beginner")
  learningStyle      String   @default("balanced")
  timeAvailability   String?
  learningPace       String?
  preferences        Json     @default("{}")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserKnownTechnology {
  id               String   @id @default(uuid())
  userId           String
  technology       String
  proficiencyLevel String?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, technology])
  @@index([userId])
}

model Otp {
  id        String     @id @default(cuid())
  userId    String
  email     String
  otp       String
  purpose   OtpPurpose
  type      String
  verified  Boolean    @default(false)
  attempts  Int        @default(0)
  expiresAt DateTime
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
  @@index([otp])
  @@map("otps")
}

model Document {
  id         String         @id @default(uuid())
  uploaderId String
  fileName   String
  fileUrl    String
  status     DocumentStatus @default(UPLOADED)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  user       User           @relation(fields: [uploaderId], references: [id], onDelete: Cascade)

  ingest Ingest[]

  @@index([uploaderId])
  @@index([status])
}

model Ingest {
  id         String          @id @default(uuid())
  documentId String
  status     IngestionStatus @default(QUEUED)
  error      String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([status])
}

model Quiz{
  id String @id @default(uuid())
  topicContentId  String

  questions Json
  answers Json  
  totalQuestions  Int
  explanation     Json
  difficulty      String
  concept         String
  sourceSection   String
  learningObjective  String
  passingScore    Float
  estimatedTime   Int
  difficultyBreakdown Json
  conceptCoverage Json
  codeQuestionCount Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  topicContent TopicContent @relation(fields: [topicContentId], references: [id], onDelete: Cascade)
  quizAttempts QuizAttempt[]

  @@index([topicContentId])
}

model QuizAttempt {
  id              String       @id @default(uuid())
  userId          String
  topicContentId  String
  quizId          String?

  // Quiz data
  answers         Json         // User's answers { questionId: selectedOption }
  score           Float        // Percentage score (0-100)
  totalQuestions  Int
  correctAnswers  Int

  // Metadata
  timeSpent       Int?         // Time spent in seconds
  completedAt     DateTime     @default(now())
  
  // Relations
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  topicContent    TopicContent @relation(fields: [topicContentId], references: [id], onDelete: Cascade)
  quiz            Quiz?        @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quizId])
  @@index([topicContentId])
  @@index([userId, topicContentId, quizId])
}

model DocumentSource {
  id              String          @id @default(uuid())
  
  // Framework Info (Required)
  frameworkKey    String          @unique
  frameworkName   String
  version         String
  baseUrl         String
  
  // File Handling (Required)
  extensions      String[]
  subdirectory    String?
  
  // Preprocessing (Optional)
  removePatterns  String[]        @default([])
  cleanWhitespace Boolean         @default(true)
  
  // URL Configuration (Optional)
  pathPrefix      String?
  stripNumPrefix  Boolean         @default(false)
  replaceExts     Json?
  
  // Storage Info
  storageKey      String?
  docsPath        String
  collectionName  String          @default("framework_docs")
  fileCount       Int?
  totalSize       Int?
  
  // Ingestion Status
  status          IngestionStatus @default(QUEUED)
  chunksIndexed   Int?
  lastIngestedAt  DateTime?
  errorMessage    String?
  
  // Ingestion Parameters (Optional - use defaults if not set)
  targetTokens    Int             @default(500)
  maxTokens       Int             @default(2000)
  recreateCollection Boolean      @default(false)
  
  // Metadata
  uploadedBy      String
  uploadedAt      DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  uploader        User            @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  
  @@index([frameworkKey])
  @@index([status])
  @@index([uploadedBy])
}

enum Role {
  USER
  ADMIN
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  FORGOT_PASSWORD
}

enum DocumentStatus {
  UPLOADED
  QUEUED
  PROCESSING
  INGESTED
  FAILED
}

enum IngestionStatus {
  QUEUED
  PROCESSING
  INGESTED
  FAILED
}
