generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String                @id @default(uuid())
  name          String?
  email         String                @unique
  emailVerified Boolean               @default(false)
  image         String?
  password      String?
  role          Role                  @default(USER)
  isActive      Boolean               @default(true)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  refreshToken  String?
  chatSessions  ChatSession[]
  roadmaps      Roadmap[]
  knownTech     UserKnownTechnology[]
  preferences   UserPreferences?
  otps          Otp[]
  document      Document[]

  @@index([role])
  @@index([email])
}

model Roadmap {
  id            String           @id @default(uuid())
  userId        String
  chatSessionId String?
  title         String
  goal          String
  intent        String           @default("learn")
  proficiency   String?
  roadmapData   Json
  message       String?
  isSelected    Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  messages      Message[]
  chatSession   ChatSession?     @relation(fields: [chatSessionId], references: [id])
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  progress      RoadmapProgress?
  topicContents TopicContent[]

  @@index([userId])
  @@index([userId, isSelected])
  @@index([chatSessionId])
  @@index([createdAt])
}

model ChatSession {
  id        String    @id @default(uuid())
  userId    String
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  roadmaps  Roadmap[]

  @@index([userId])
  @@index([userId, createdAt])
}

model Message {
  id            String      @id @default(uuid())
  chatSessionId String
  role          String
  content       String
  roadmapId     String?
  createdAt     DateTime    @default(now())
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  roadmap       Roadmap?    @relation(fields: [roadmapId], references: [id])

  @@index([chatSessionId])
  @@index([chatSessionId, createdAt])
}

model RoadmapProgress {
  id              String   @id @default(uuid())
  roadmapId       String   @unique
  completedPhases Json     @default("[]")
  completedTopics Json     @default("[]")
  currentPhase    Int      @default(0)
  currentTopic    String?
  totalTimeSpent  Float    @default(0)
  lastAccessedAt  DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  roadmap         Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@index([roadmapId])
}

model TopicContent {
  id          String   @id @default(uuid())
  roadmapId   String
  
  // Topic identification
  topicTitle  String
  phaseNumber Int
  phaseTitle  String
  
  // Generated content (stored as JSON)
  content     Json
  
  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  roadmap     Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  
  // Ensure one topic content per roadmap/phase/topic combination
  @@unique([roadmapId, phaseNumber, topicTitle])
  @@index([roadmapId])
  @@index([roadmapId, phaseNumber])
}


model UserPreferences {
  userId             String   @id
  defaultProficiency String   @default("beginner")
  learningStyle      String   @default("balanced")
  timeAvailability   String?
  learningPace       String?
  preferences        Json     @default("{}")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserKnownTechnology {
  id               String   @id @default(uuid())
  userId           String
  technology       String
  proficiencyLevel String?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, technology])
  @@index([userId])
}

model Otp {
  id        String     @id @default(cuid())
  userId    String
  email     String
  otp       String
  purpose   OtpPurpose
  type      String
  verified  Boolean    @default(false)
  attempts  Int        @default(0)
  expiresAt DateTime
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
  @@index([otp])
  @@map("otps")
}

model Document {
  id         String         @id @default(uuid())
  uploaderId String
  fileName   String
  fileUrl    String
  status     DocumentStatus @default(UPLOADED)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  user       User           @relation(fields: [uploaderId], references: [id], onDelete: Cascade)

  ingest Ingest[]

  @@index([uploaderId])
  @@index([status])
}

model Ingest {
  id         String          @id @default(uuid())
  documentId String
  status     IngestionStatus @default(QUEUED)
  error      String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([status])
}

enum Role {
  USER
  ADMIN
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  FORGOT_PASSWORD
}

enum DocumentStatus {
  UPLOADED
  QUEUED
  PROCESSING
  INGESTED
  FAILED
}

enum IngestionStatus {
  QUEUED
  PROCESSING
  INGESTED
  FAILED
}
